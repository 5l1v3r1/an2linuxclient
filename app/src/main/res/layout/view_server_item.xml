<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iconConnectionType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_bluetooth_white_24dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/listItemServerName"
            style="@style/ServerListTextView"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/listItemServerInfo1"
            style="@style/ServerListTextView"
            android:layout_marginTop="4dp"
            android:textColor="@color/gray_light" />

        <TextView
            android:id="@+id/listItemServerInfo2"
            style="@style/ServerListTextView"
            android:layout_marginTop="4dp"
            android:textColor="@color/gray_light" />

        <TextView
            android:id="@+id/listItemServerInfo3"
            style="@style/ServerListTextView"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/gray_light" />

    </LinearLayout>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/prefServerEnabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:focusable="false" />

</LinearLayout>