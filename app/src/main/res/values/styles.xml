<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/gray_light</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/gray</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/black</item>
        <item name="colorControlHighlight">@color/gray_extra_light</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="PreferenceFragmentTheme">
        <item name="android:textColorPrimary">@color/pref_two_state_color_text</item>
        <item name="android:textColorSecondary">@color/pref_two_state_color_text_secondary</item>
    </style>

    <style name="ProgressDialogStyle" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="ServerListTextView" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_toEndOf">@+id/iconConnectionType</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="DialogTextView" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="DialogEditText" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_dark</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="InfoTextStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomButtonColorOverlay" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/white</item>
        <item name="colorControlHighlight">@color/gray_extra_light</item>
    </style>

    <style name="DialogButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:theme">@style/CustomButtonColorOverlay</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="NumberPickerStyle">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

</resources>
